@using Ireview.Core.Model
@model Article
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<link rel="stylesheet" href="http://demo.itsolutionstuff.com/plugin/bootstrap-3.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/4.0.1/min/dropzone.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<a onclick="history.back()" style="cursor:pointer"><i class="bi bi-arrow-left"></i>@Localizer["Back"]</a>
<h1 class="mt-4">@Localizer["NewArticle"]</h1>

<form class="border border-black p-3 border-2" method="post" action="PostArticle" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div>
        <label class="col-form-label " for="inputDefault">@Localizer["Image"]</label>
        <div class="fallback">
            <input id="fileUpload" type="file" class=" dropzone w-100" style="min-height:50px" name="uploadedFile" onchange="setFileInfo(this.files)" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-form-label " for="inputDefault">@Localizer["Title"]</label>
        <input type="text" class="form-control" id="articleTitle" asp-for="Title">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label mt-2" for="inputDefault">@Localizer["Header"]</label>
        <input type="text" class="form-control"  id="nameOfArt" asp-for="Header">
    </div>
    <div class="form-group">
        <label for="articleTag" class="form-label mt-4">@Localizer["Group"]</label>
        <select class="form-select" id="articleTag" asp-for="Group">
            <option>Films</option>
            <option>Games</option>
            <option>Music</option>
            <option>Books</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleTextarea" class="form-label mt-4">@Localizer["ArticleText"]</label>
        <textarea class="form-control" id="articleText" asp-for="Text" rows="5" style="min-height:50px"></textarea>
    </div>
    <div class="row justify-content-end mt-4 me-3">
        <button type="submit" class="btn btn-primary" style="border-radius:10px; width:200px">@Localizer["Post"]</button>
    </div>
</form>

<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>

<script type="text/javascript">
    Dropzone.options.imageUpload = {
        maxFiles: 1,
        acceptedFiles: ".jpeg,.jpg,.png"
    }; 
</script>